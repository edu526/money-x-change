{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": [
    "tslint:recommended",
    "angular-tslint-rules",
    "tslint-consistent-codestyle"
  ],
  "rules": {
    "template-conditional-complexity": false,
    "only-arrow-functions": false,
    "no-forward-ref": false,
    "no-invalid-this": false,
    "template-cyclomatic-complexity": false,
    "no-parameter-reassignment": false,
    "no-void-expression": false,
    "strict-boolean-expressions": false,
    "comment-type": false,
    "unnecessary-constructor": false,
    "no-floating-promises": false,
    "prefer-readonly": false,
    "no-object-literal-type-assertion": false,
    "use-view-encapsulation": false,
    "trackBy-function": false,
    "max-inline-declarations": false,
    "prefer-output-readonly": false,
    "no-template-call-expression": false,
    "interface-name": [
      true,
      "always-prefix"
    ],
    "prefer-function-over-method": false,
    "no-null-keyword": false,
    "no-unused": [
      true,
      "ignore-parameters"
    ],
    "directive-selector": [
      false,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      false,
      "element",
      "app",
      "kebab-case"
    ],
    "arrow-return-shorthand": true,
    "callable-types": true,
    "class-name": true,
    "i18n": [
      false,
      "check-text"
    ],
    "comment-format": [
      true,
      "check-space"
    ],
    "curly": true,
    "deprecation": {
      "severity": "warn"
    },
    "eofline": true,
    "forin": true,
    "import-blacklist": [
      true,
      "rxjs/Rx"
    ],
    "import-spacing": true,
    "indent": [
      true,
      "spaces"
    ],
    "interface-over-type-literal": true,
    "label-position": true,
    "max-line-length": [
      true,
      140
    ],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [
      true,
      "log",
      "debug",
      "info",
      "dir",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-empty": false,
    "no-empty-interface": false,
    "no-eval": true,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-misused-new": true,
    "no-non-null-assertion": true,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unnecessary-initializer": true,
    "no-unused-expression": true,
    "no-use-before-declare": false,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "one-line": [
      false,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "prefer-const": true,
    "quotemark": [
      true,
      "single"
    ],
    "radix": true,
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "variable-name": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "no-output-on-prefix": true,
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "no-implicit-dependencies": false,
    "no-namespace": false
  },
  "linterOptions": {
    "exclude": []
  }
}
